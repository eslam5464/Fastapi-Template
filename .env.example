# redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=1234
REDIS_USER=redis_user
REDIS_BASE=0
REDIS_MAX_POOL_CONNECTIONS=20
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5

# Redis Cache TTLs in seconds
CACHE_ENABLED=False
CACHE_TTL_DEFAULT=300
CACHE_TTL_SHORT=60
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Rate Limiting (requests per window)
RATE_LIMIT_ENABLED=False
## Enable or disable rate limiting
RATE_LIMIT_DEFAULT=100
## Default limit for general API endpoints
RATE_LIMIT_WINDOW=60
## Time window in seconds (default: 60 seconds / 1 minute)
RATE_LIMIT_STRICT=10
## Strict limit for authentication endpoints (login, signup, etc.)
RATE_LIMIT_LENIENT=1000
## Lenient limit for public endpoints (health checks, documentation, etc.)
RATE_LIMIT_USER=300
## Limit for authenticated user endpoints

# Security
SECRET_KEY=your-secret-key-here-make-it-very-long-and-random
ACCESS_TOKEN_EXPIRE_SECONDS=2582000
## Access Token expiry times in seconds
REFRESH_TOKEN_EXPIRE_SECONDS=2592000
## Refresh Token expiry times in seconds

# OpenObserve
LOG_TO_OPENOBSERVE=False
OPENOBSERVE_URL=https://logs.example.com/
OPENOBSERVE_ORG_ID=default
OPENOBSERVE_STREAM_NAME=test_logs
OPENOBSERVE_ACCESS_KEY=your-base64-encoded-access-key-here
## Authentication token (Basic auth base64)
OPENOBSERVE_BATCH_SIZE=10
## Number of logs to batch (default: 10)
OPENOBSERVE_FLUSH_INTERVAL=5.0
## Seconds between flushes (default: 5.0)

